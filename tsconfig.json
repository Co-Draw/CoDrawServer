{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "checkJs": false,
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types",
      "src/interfaces"
    ],
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}